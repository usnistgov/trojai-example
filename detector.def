Bootstrap: docker
From: pytorch/pytorch:2.2.2-cuda11.8-cudnn8-runtime

%files
    ./detector.py /
    ./entrypoint.py /
    ./utils /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /

%post
    apt update

    pip install --upgrade pip
    pip install jsonschema scikit-learn transformers accelerate peft

%runscript
    exec python3 /entrypoint.py "$@"
