Bootstrap: docker
From: pytorch/pytorch:1.12.0-cuda11.3-cudnn8-runtime

%files
    ./example_trojan_detector.py /
    ./metaparameters.json /
    ./metaparameters_schema.json /
    ./learned_parameters /

%post
    apt update
    # Needed for cv2
    apt -y install libglib2.0-0 libx11-6

    pip install --upgrade pip
    pip install trojai_rl
    pip install gym-minigrid==1.0.2
    pip install torch jsonschema jsonargparse

%runscript
    exec python3 /example_trojan_detector.py "$@"
