Bootstrap: docker
From: pytorch/pytorch:1.8.0-cuda11.1-cudnn8-runtime

%files
    ./example_trojan_detector.py /
    ./reverse_trigger.py /
    ./utils_qa.py /
    ./squad_v2_data.json /
    ./conll2003_data.json /
    ./imdb_data.json /
    ./lgbm.joblib /
    ./metaparameters.json /
